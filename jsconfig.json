{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["./"],
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}
